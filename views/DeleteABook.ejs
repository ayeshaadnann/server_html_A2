<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/style">
    <style>
        .pane{
            background-color: rgb(198, 191, 191);
        }
        body{
            background-color: rgb(223, 200, 244);
            border-style: double;
            text-align: center;
            padding: 30px;
        }
       
        h1{
            text-align: center;
            color: rgb(67, 133, 67);
        }
        
    </style> 
</head>
<body>
    <div id="title">
        <h1>Delete a book</h1>
    </div>
    <br>
    <br>
    <div id="list">
        <table>
            <% let i = 0 %>
            <% data.forEach (data => {%>
            <form action="<%= `newbook/${data.book}/delete?_method=DELETE` %>" method="POST">
                <% i++ %>
                <tr>
                    <td><button type= "submit" onclick="return confirm('Are you sure you want to delete this record?')">X</button>
                    <label><%= data.name %></label></td>
                </tr>
            </form>
            <% }); %>
        </table>
    </div>
    <div class="pane">
        <%- include('partials/navpane') %>
    </div>
</body>
</html>